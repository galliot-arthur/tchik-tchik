generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
    directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
    id        String   @id @default(cuid())
    name      String?
    email     String   @unique
    password  String
    createdAt DateTime @default(now()) @map(name: "created_at")
    updatedAt DateTime @updatedAt @map(name: "updated_at")

    @@map(name: "users")
}

model Movie {
    id           String   @id @default(cuid())
    name         String
    slug         String   @unique
    createdAt    DateTime @default(now()) @map(name: "created_at")
    updatedAt    DateTime @updatedAt @map(name: "updated_at")
    director     String
    writtenBy    String?  @default("") @map(name: "written_by")
    duration     String
    kind         String
    releaseYear  Int      @map(name: "released_year")
    bio          String
    staff        Json
    coproducedBy String?  @default("") @map(name: "coproduced_by")
    sponsor      String?  @default("")
    diffusion    Json
    festivals    String?  @default("")
    press        Json
    spoiler      String?  @default("")

    @@map(name: "movies")
}
