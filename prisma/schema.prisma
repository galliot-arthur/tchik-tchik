generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
    directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
    id        String   @id @default(cuid())
    name      String?
    email     String   @unique
    password  String
    createdAt DateTime @default(now()) @map(name: "created_at")
    updatedAt DateTime @updatedAt @map(name: "updated_at")

    @@map(name: "users")
}

model Movie {
    id           String   @id @default(cuid())
    name         String   @db.VarChar
    slug         String   @unique @db.VarChar
    createdAt    DateTime @default(now()) @map(name: "created_at")
    updatedAt    DateTime @updatedAt @map(name: "updated_at")
    director     String   @db.VarChar
    writtenBy    String   @map(name: "written_by")
    duration     String   @db.VarChar
    kind         String   @db.VarChar
    releasedAt   DateTime @map(name: "released_at")
    bio          String   @db.Text
    staff        Json     @db.Json
    coproducedBy String   @db.VarChar
    sponsor      String   @db.VarChar
    diffusion    String   @db.Text
    festivals    String   @db.Text
    press        Json     @db.Json
    spoiler      String   @db.VarChar

    @@map(name: "movies")
}
